{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "es2021",
      "es2022",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "emitDecoratorMetadata": true,
    "checkJs": false,
    "allowUnusedLabels": false,
    "removeComments": true,
    "importHelpers": true,
    "noEmitOnError": false,
    "declaration": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "sourceMap": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    "skipDefaultLibCheck": true,
    "watch": true,
    "rootDir": "./",
    "baseUrl": "src",
  },
  "typeAcquisition": {
    "enable": false
  },
  "compileOnSave": true,
  //~ only files in these folders will get .js files generated from .ts
  "include": [
    // "test/**/*",
    "src"
  ],
  //~ files in these folder will not get any .js files generated from .ts
  "exclude": [
    "../.vscode",
    "../code",
    "../.git",
    "node_modules",
    "../node_modules"
  ],
  //~ exclude .js files generated by certain .ts & .tsx source
  "files.exclude": {
    "**/*.js": {
      "when": "$(some_name).ts"
    },
    "**/**.js": {
      "when": "$(some_name).tsx"
    }
  }
}
